<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:background="#796"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact App"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:id="@+id/name"
        android:layout_marginStart="25dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:hint="Phone #"
        android:id="@+id/phone"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/phone"
        android:layout_alignStart="@+id/phone" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Show All"
        android:id="@+id/showall"
        android:layout_alignTop="@+id/save"
        android:layout_toEndOf="@+id/save"
        android:layout_marginStart="44dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/update"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/save"
        android:layout_alignStart="@+id/save" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:id="@+id/delete"
        android:layout_alignBottom="@+id/update"
        android:layout_alignStart="@+id/showall"
        android:layout_alignEnd="@+id/showall" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search by Name"
        android:id="@+id/show"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/update"
        android:layout_alignStart="@+id/update"
        android:layout_alignEnd="@+id/delete" />

</RelativeLayout>
